
<div class="books delete">
  <h2>Delete Book</h2>

 
  <%= form_for(@book, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this book?</p>
    
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Price</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @book.title %></td>
        <td><%= @book.author %></td>
        <td><%= @book.price %></td>
        <td><%= @book.published_date %></td>
      </tr>
    </tbody>
    </table>

    <div class="form-buttons">
      <%= f.submit("Delete Book") %>
    </div>

  <% end %>
  <br/>
</div>

<%= link_to('Back', books_path, :class => 'back-link') %>
